<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <application
        android:name=".OpenGLScenesApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LearnOpenGLScenes"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning"
        android:configChanges="uiMode">
        <activity
            android:name=".ui.InfoActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="true"
            android:theme="@style/Theme.LearnOpenGLScenes.NoActionBar">
        </activity>
        <activity
            android:name=".ui.SceneListDetailActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="true"
            android:theme="@style/Theme.LearnOpenGLScenes.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".graphics.GateNativeActivity"
            android:configChanges="orientation|keyboardHidden|screenSize">
            <!-- Tell NativeActivity the name of our .so -->
            <meta-data android:name="android.app.lib_name" android:value="native-scene" />
        </activity>
        <meta-data android:name="firebase_analytics_collection_deactivated"
            android:value="@bool/FIREBASE_ANALYTICS_DEACTIVATED"/>
    </application>

    <!-- Tell the system this app requires OpenGL ES 3.2 -->
    <uses-feature
        android:glEsVersion="0x00030002"
        android:required="true" />

</manifest>